<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_pantalla_dos"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:background="#baffe0"
tools:context="com.example.grupo8webir.WhereToGo.ui.filtros">

<TextView
    android:text="$0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/barraPrecio"
    android:layout_centerHorizontal="true"
    android:id="@+id/precio"
    android:textSize="24sp"/>

<SeekBar
    style="@android:style/Widget.DeviceDefault.SeekBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:max="1500"
    android:progress="100"
    android:id="@+id/barraPrecio"
    android:layout_marginTop="45dp"
    android:layout_below="@+id/textView"
    android:layout_alignParentStart="true" />

<TextView
    android:text="Precio mÃ¡ximo:"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="22dp"
    android:id="@+id/textView"
    android:textSize="24sp" />
<!--android:layout_below="@+id/categorias" /> -->
<!--
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categorias"
        android:entries="@array/categorias"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/precio" /> -->

<Button
    android:text="Selecionar Fecha"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/botonFecha"
    android:layout_marginTop="21dp"
    android:layout_below="@+id/mostrarFecha"
    android:layout_centerHorizontal="true" />

<Button
    android:text="Seleccionar Hora"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:id="@+id/botonHora"
    android:layout_below="@+id/botonFecha"
    android:layout_alignEnd="@+id/botonFecha" />

<TextView
    android:text="A partir de:"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/botonFecha"
    android:layout_marginTop="22dp"
    android:textSize="24sp"
    android:id="@+id/textView3"
    android:layout_alignStart="@+id/textView2"
    android:layout_alignEnd="@+id/mostrarFecha" />

<TextView
    android:text="hora"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="24sp"
    android:id="@+id/hora"
    android:layout_alignBottom="@+id/textView3"
    android:layout_alignEnd="@+id/botonHora"
    android:layout_toEndOf="@+id/textView" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="24sp"
    android:id="@+id/mostrarFecha"
    android:text="No especificado"
    android:layout_alignBaseline="@+id/textView2"
    android:layout_alignBottom="@+id/textView2"
    android:layout_centerHorizontal="true" />

<TextView
    android:text="Fecha:"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="26dp"
    android:id="@+id/textView2"
    android:textSize="24sp"
    android:layout_below="@+id/barraPrecio"
    android:layout_alignParentStart="true" />

<Button
    android:text="Ver resultados"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:id="@+id/resultados" />


</RelativeLayout>
